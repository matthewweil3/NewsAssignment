@model List<NewsAssignment.Models.ArticleViewModel>

<div
    class="mt-3 mb-3 row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4"
    id='@ViewData["list-id"]'
    data-masonry='@(ViewData["list-id"] == "latest-news" ? "" : "{\"percentPosition\": true }")'>
    @foreach (var article in Model)
    {
        var articleLink = Url.Page("/Articles/Article", new { id = article.Id });

        <div class="col">
            <a class="card home-card @(article.Color)" href="@(articleLink)">
                <h6 class="card-header">
                    <i class="bi-@(article.Icon)"></i>
                    &nbsp;
                    @article.CategoriesString
                </h6>

                @if (!string.IsNullOrEmpty(article.ImageUrl))
                {
                    <img src="@article.ImageUrl" class="card-img-top p-2" style="height: 10rem; object-fit: contain" />
                }

                <div class="card-body">
                    <h5 class="card-title">@article.Title</h5>
                    <p class="card-text">@article.Description</p>
                </div>

                <small class="card-footer">
                    @(article.DaysAgo)
                </small>
            </a>
        </div>
    }
</div>
