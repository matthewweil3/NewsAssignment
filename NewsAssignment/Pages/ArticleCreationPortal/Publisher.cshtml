@page
@model NewsAssignment.Pages.ArticleCreationPortal.PublisherModel
@{
}

<table class="table">
    <thead>
        <tr>
            <th>
                Article Publish Date
            </th>
            <th>
                Article Author
            </th>
            <th>
                Article Title
            </th>
            <th>
                Article Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Articles)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.pubDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.creator)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> &nbsp;
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> &nbsp;
                    <a asp-route-id="@item.Id" method="post" asp-page-handler="publish">Publish</a> &nbsp;
                    <a asp-route-id="@item.Id" method="post" asp-page-handler="edit">Send Back to Editors</a> &nbsp;
                    <a asp-route-id="@item.Id" method="post" asp-page-handler="rewrite">Send Back to Writers</a> <!-- add reason eventually -->
                </td>
            </tr>
        }
    </tbody>
</table>
